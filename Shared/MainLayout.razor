@inherits LayoutComponentBase
@inject UserSessions Session

@if (Session.IsSignedUp)
{
    <p>Welcome, @Session.UserName! You've registered for:</p>
    <ul>
        @foreach (var ev in Session.RegisteredEvents)
        {
            <li>@ev</li>
        }
    </ul>
}

<div class="layout-container">
    <div class="sidebar">
        <EventEase.Shared.NavMenu />
    </div>

    <div class="main-content">
        @Body
    </div>
</div>

<style>
    .layout-container {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: #f8f9fa;
        border-right: 1px solid #ddd;
    }

    .main-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
    }
</style>
